{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}

{# @author Ing. Dominik Mach <xXIamCzechXx@gmail.com> #}
{% set id = ea.entity.instance.id ?? null %}
{% if id %}
    <div class="ea-field-user-list">
        <iframe
            src="{{ field.customOptions.get('callbackUrl') }}"
            width="100%"
            height="{{ field.customOptions.get('height') }}"
            data-controller="iamczech--easyadmin-fields-bundle--embed"
            data-action="load->iamczech--easyadmin-fields-bundle--embed#resize"
        ></iframe>
    </div>
{% else %}
    <p class="text-muted">Uživatelé budou dostupní po vytvoření klienta.</p>
{% endif %}
